{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cognitive IDE",
  "version": "0.1.0",
  "identifier": "com.ide.cognitive",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Cognitive",
        "decorations": false,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:*; img-src 'self' asset: http://asset.localhost http://localhost:* http://127.0.0.1:* data:; style-src 'self' 'unsafe-inline' http://localhost:* http://127.0.0.1:*; script-src 'self' 'unsafe-inline' http://localhost:* http://127.0.0.1:*; connect-src 'self' ws://localhost:* ws://127.0.0.1:* http://localhost:* http://127.0.0.1:*",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi",
      "deb",
      "dmg",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "en-US",
          "ru-RU"
        ]
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0"
        ],
        "desktopTemplate": "cognetive.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "depends": [
          "gtk3"
        ],
        "desktopTemplate": "cognetive.desktop"
      }
    }
  }
}