{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Cognitive",
  "version": "6.0.1",
  "identifier": "com.cognitive.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:6712",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Cognitive",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "alwaysOnTop": false,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; media-src 'self' asset: http://asset.localhost blob: data:;",
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
